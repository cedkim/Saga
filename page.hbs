{{!< default}}
{{#post ~}}
    <header id="header" class="header {{#if feature_image}}cover-image {{/if}}animated fadeIn"{{#if feature_image}} style="background-image: url({{img_url feature_image size="xl"}})"{{/if}}>
        <section class="header--top">
            {{>header-navigation}}
        </section>
        <section class="post-meta">
            <h1 class="page-title animated fadeInUp">&nbsp;&nbsp;{{title}}</h1><br/>
        </section>
    </header>
    <main id="main" class="main">
        <article class="animated fadeIn {{post_class}}">
            <section class="content">
                {{content}}
            </section>
        </article>
    </main>
{{~/post}}
